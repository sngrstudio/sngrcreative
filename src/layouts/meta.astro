---
export interface Props {
  title?: string | undefined
  description?: string | undefined
  canonical?: string | undefined
}

const { title, description, canonical } = Astro.props

const site = {
  title: 'Astro Base Template',
  description:
    'Astro Base Template is for used as base template for another template or be used directly'
} satisfies Props
---

{/* Basic metadata */}
<title>{title ? `${title} \u2014 ${site.title}` : site.title}</title>
<meta
  name='description'
  content={description ? description : site.description}
/>
<link rel='canonical' href={canonical ? canonical : Astro.url} />

{/* Favicon */}
<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
